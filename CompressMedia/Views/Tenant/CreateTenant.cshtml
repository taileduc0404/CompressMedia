@model CompressMedia.DTOs.TenantDto

@{
	ViewBag.Title = "Create New Tenant";
	Layout = "_Layout";
}

<h2>Create New Role</h2>

<form asp-action="CreateTenant" method="post">
	<input type="hidden" asp-for="TenantId" />
	<div class="form-group">
		<label asp-for="TenantName"></label>
		<input asp-for="TenantName" class="form-control" />
		<span asp-validation-for="TenantName" class="text-danger" />
	</div>
	<div class="form-group">
		<label asp-for="CompanyName"></label>
		<input asp-for="CompanyName" class="form-control" />
		<span asp-validation-for="CompanyName" class="text-danger" />
	</div>
	<div class="form-group">
		<label asp-for="RegisterDto!.Username"></label>
		<input asp-for="RegisterDto!.Username" class="form-control" />
		<span asp-validation-for="RegisterDto!.Username" class="text-danger" />
	</div>
	<div class="form-group">
		<label asp-for="RegisterDto!.FirstName"></label>
		<input asp-for="RegisterDto!.FirstName" class="form-control" />
		<span asp-validation-for="RegisterDto!.FirstName" class="text-danger" />
	</div>
	<div class="form-group">
		<label asp-for="RegisterDto!.LastName"></label>
		<input asp-for="RegisterDto!.LastName" class="form-control" />
		<span asp-validation-for="RegisterDto!.LastName" class="text-danger" />
	</div>
	<div class="form-group">
		<label asp-for="RegisterDto!.Email"></label>
		<input asp-for="RegisterDto!.Email" class="form-control" />
		<span asp-validation-for="RegisterDto!.Email" class="text-danger" />
	</div>
	<div class="form-group">
		<label asp-for="RegisterDto!.Password"></label>
		<input asp-for="RegisterDto!.Password" class="form-control" />
		<span asp-validation-for="RegisterDto!.Password" class="text-danger" />
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
</form>
