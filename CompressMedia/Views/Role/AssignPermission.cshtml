@model IEnumerable<CompressMedia.DTOs.PermissionDto>

<h2>Assign Permissions to Role</h2>

<form asp-action="AssignPermission" method="post">
	<input type="hidden" name="RoleId" value="@Model.FirstOrDefault()?.RoleId" />

	<div>
		@foreach (var permission in Model)
		{
			<div class="form-check">
				<input type="checkbox" class="form-check-input" name="SelectedPermissions" value="@permission.PermissionId" @(permission.IsSelected ? "checked" : "") />
				<label class="form-check-label">@permission.PermissionName</label>
			</div>
		}
	</div>

	<button type="submit" class="btn btn-primary">Save Permissions</button>
</form>
