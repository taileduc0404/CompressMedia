@model IEnumerable<CompressMedia.DTOs.MediaDto>

@{
	ViewBag.Title = "Medias";
	Layout = "_Layout";
}

<h2>Medias</h2>

<button type="button" class="btn btn-primary"><a asp-controller="Media" asp-action="UploadVideo" class="text-white"> Add New Videos</a></button>

<table class="table table-bordered mt-4">
	<thead>
		<tr>
			<th>Name</th>
			<th>Size</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var media in Model)
		{
			<tr>
				<th>@media.MediaPath</th>
				<td>@media.Size Mb</td>
				<td>@media.Status</td>
				@* <td>200</td> *@
				<td>
					<button type="submit" class="btn btn-outline-danger">Delete</button>
					@if (media.Status == "Compressed")
					{
						<button type="button" class="btn btn-outline-primary" disabled>Compress</button>
					}
					else
					{
						<a asp-controller="Media" asp-action="CompressVideo" asp-route-mediaId="@media.MediaId" class="btn btn-outline-primary">Compress</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>