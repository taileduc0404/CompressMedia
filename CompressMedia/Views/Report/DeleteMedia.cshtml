@model CompressMedia.DTOs.ReportDto

@{
    ViewData["Title"] = "Delete Media";
}

<h2>Delete Media</h2>

@if (Model == null)
{
    <p>Model is null. Please check the data passed to this view.</p>
}
else
{
    <form asp-action="DeleteMedia" asp-controller="Report" method="post" enctype="multipart/form-data">
        <input type="hidden" name="mediaId" value="@Model.MediaId" />
        @* <input type="hidden" name="containerId" value="@Model.ContainerId" /> *@

        <button class="btn btn-outline-secondary" type="submit">Delete</button>
    </form>
}
